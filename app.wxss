/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #1D3557;
  color: #F1FAEE;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.btn-primary {
  background-color: #E63946;
  color: #F1FAEE;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.btn-secondary {
  background-color: transparent;
  color: #F1FAEE;
  border: 2rpx solid #FFD700;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card {
  background-color: #457B9D;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
}

.gold-text {
  color: #FFD700;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #F1FAEE;
}